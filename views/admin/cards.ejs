<%- layout('layouts/adminLayout') %>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><%= title %></h1>
        <a href="/admin/previsualizador?action=new" class="btn btn-success">
            + Crear Nueva Tarjeta con IA
        </a>
    </div>

    <% if (successMessage && successMessage.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= successMessage[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= errorMessage[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="table-responsive">
        <table id="cardsTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ruta Archivos</th>
                    <th>Creada</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (cards && cards.length > 0) { %>
                    <% cards.forEach(function(card) { %>
                        <tr>
                            <td><%= card.title || 'N/A' %></td>
                            <td><%= card.slug || 'N/A' %></td>
                            <td><a href="<%= card.file_path ? card.file_path + '/index.html' : '#' %>" target="_blank"><%= card.file_path || 'N/A' %></a></td>
                            <td><%= new Date(card.created_at).toLocaleDateString() %></td>
                            <td>
                                <a href="/admin/cards/<%= card.id %>/edit" class="btn btn-primary btn-sm" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- El botón de eliminar podría necesitar JS para confirmación con SweetAlert -->
                                <form action="/admin/cards/<%= card.id %>?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('¿Estás seguro de que quieres eliminar esta tarjeta?');">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                                <a href="<%= card.file_path ? card.file_path + '/index.html' : '#' %>" class="btn btn-info btn-sm" target="_blank" title="Ver Tarjeta">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <!-- <tr>
                        <td colspan="3" class="text-center">No tienes ninguna tarjeta creada todavía. ¡Crea la primera!</td>
                    </tr> -->
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<% block('pageScripts').append('<script src="/js/admin-cards.js"></script>') %>
